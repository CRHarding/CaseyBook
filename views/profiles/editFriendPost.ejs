<% include ../partials/boilerplate.ejs %>
<h1>Edit Your Post</h1>
<%- message %>
<form action="/post/friend/edit/<%=post.id%>" method="post">
  <label>
    <textarea name="content" class="textBox"><%= post.content %></textarea>
  </label>
  <input type="radio" name="rest" value="1">Public<br>
  <input type="radio" name="rest" value="2">Private<br>
  <input type="radio" name="rest" value="3">Friends<br>
  <button type="submit">Submit</button>
</form>
